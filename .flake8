[flake8]
show-source = True
statistics = True
count = True
ignore =
    E722,  # bare except
exclude =
    # Automatically created directories we don't want to test.
    .git/,
    __pycache__/,
    env/,

    # Code files that need pep8 fixes.
        ./mist/orchestration/__init__.py,
        ./mist/core/orchestration/methods.py,
        ./mist/core/orchestration/models.py,
        ./mist/core/orchestration/views.py,
